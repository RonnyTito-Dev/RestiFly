{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",

    "module": "commonjs",
    "target": "es2020",
    "types": [],

    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "strict": true,
    "jsx": "react-jsx",

    // Aquí quitamos o desactivamos esta línea:
    "verbatimModuleSyntax": false,

    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,

    "moduleResolution": "node",
    "esModuleInterop": true
  },
  
  "include": ["src", "prisma"]
}
